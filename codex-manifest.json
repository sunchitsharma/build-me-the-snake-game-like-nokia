{"files": [{"path": "index.html", "content": "<!DOCTYPE html>\n<html lang=\"en\">\n<head>\n  <meta charset=\"UTF-8\" />\n  <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\" />\n  <title>Sunchit Snake</title>\n  <style>\n    :root {\n      --bg: #0f380f;\n      --grid: #306230;\n      --snake: #8bac0f;\n      --food: #9bbc0f;\n      --text: #e0f2c1;\n    }\n    * { box-sizing: border-box; }\n    body {\n      margin: 0;\n      min-height: 100vh;\n      display: flex;\n      align-items: center;\n      justify-content: center;\n      background: linear-gradient(135deg, #0a0a0a, #3a0000, #0a0a0a);\n      font-family: 'Courier New', monospace;\n      color: var(--text);\n    }\n    .frame {\n      background: #1a4d1a;\n      padding: 16px;\n      border: 8px solid #0d2d0d;\n      box-shadow: 0 10px 30px rgba(0,0,0,0.4);\n      border-radius: 12px;\n    }\n    h1 {\n      margin: 0 0 8px;\n      text-align: center;\n      letter-spacing: 2px;\n      color: var(--text);\n      text-shadow: 0 0 4px #061a06;\n    }\n    #game {\n      display: grid;\n      grid-template-columns: repeat(20, 16px);\n      grid-template-rows: repeat(20, 16px);\n      gap: 1px;\n      background: var(--bg);\n      padding: 6px;\n      border: 4px solid #082008;\n    }\n    .cell { width: 16px; height: 16px; background: var(--grid); }\n    .snake { background: var(--snake); }\n    .food { background: var(--food); }\n    .hud {\n      display: flex;\n      justify-content: space-between;\n      margin-bottom: 8px;\n      font-size: 14px;\n    }\n    .controls {\n      display: grid;\n      grid-template-columns: repeat(3, 50px);\n      gap: 6px;\n      margin-top: 12px;\n      justify-content: center;\n    }\n    .btn {\n      padding: 10px;\n      background: #0f380f;\n      border: 2px solid #082008;\n      border-radius: 6px;\n      color: var(--text);\n      text-align: center;\n      cursor: pointer;\n      user-select: none;\n      box-shadow: 0 2px 0 #082008;\n      transition: transform 0.05s;\n    }\n    .btn:active { transform: translateY(2px); box-shadow: 0 0px 0 #082008; }\n  </style>\n</head>\n<body>\n  <div class=\"frame\">\n    <h1>SUNCHIT SNAKE</h1>\n    <div class=\"hud\">\n      <div>Score: <span id=\"score\">0</span></div>\n      <div>Speed: <span id=\"speed\">6</span></div>\n    </div>\n    <div id=\"game\"></div>\n    <div class=\"controls\">\n      <div></div><div class=\"btn\" data-dir=\"ArrowUp\">▲</div><div></div>\n      <div class=\"btn\" data-dir=\"ArrowLeft\">◀</div><div class=\"btn\" data-dir=\"ArrowDown\">▼</div><div class=\"btn\" data-dir=\"ArrowRight\">▶</div>\n    </div>\n  </div>\n  <script>\n    const size = 20;\n    const gameEl = document.getElementById('game');\n    const scoreEl = document.getElementById('score');\n    const speedEl = document.getElementById('speed');\n    let cells = [];\n    let snake = [{ x: 10, y: 10 }];\n    let dir = { x: 1, y: 0 };\n    let nextDir = { x: 1, y: 0 };\n    let food = spawnFood();\n    let score = 0;\n    let speed = 6; // moves per second\n    let lastTime = 0;\n    let accumulated = 0;\n\n    function createGrid() {\n      for (let i = 0; i < size * size; i++) {\n        const cell = document.createElement('div');\n        cell.className = 'cell';\n        gameEl.appendChild(cell);\n        cells.push(cell);\n      }\n    }\n\n    function index(x, y) {\n      return y * size + x;\n    }\n\n    function draw() {\n      cells.forEach(c => c.className = 'cell');\n      snake.forEach(s => cells[index(s.x, s.y)].classList.add('snake'));\n      cells[index(food.x, food.y)].classList.add('food');\n    }\n\n    function spawnFood() {\n      let pos;\n      do {\n        pos = { x: Math.floor(Math.random() * size), y: Math.floor(Math.random() * size) };\n      } while (snake.some(s => s.x === pos.x && s.y === pos.y));\n      return pos;\n    }\n\n    function gameOver() {\n      alert('Game over! Score: ' + score);\n      snake = [{ x: 10, y: 10 }];\n      dir = { x: 1, y: 0 };\n      nextDir = { x: 1, y: 0 };\n      food = spawnFood();\n      score = 0;\n      speed = 6;\n      scoreEl.textContent = score;\n      speedEl.textContent = speed;\n    }\n\n    function update(delta) {\n      accumulated += delta;\n      const interval = 1000 / speed;\n      if (accumulated < interval) return;\n      accumulated = 0;\n      dir = nextDir;\n      const head = { x: (snake[0].x + dir.x + size) % size, y: (snake[0].y + dir.y + size) % size };\n      // collision with self\n      if (snake.some(s => s.x === head.x && s.y === head.y)) {\n        gameOver();\n        return;\n      }\n      snake.unshift(head);\n      if (head.x === food.x && head.y === food.y) {\n        score += 10;\n        speed = Math.min(15, 6 + Math.floor(score / 50));\n        food = spawnFood();\n        scoreEl.textContent = score;\n        speedEl.textContent = speed;\n      } else {\n        snake.pop();\n      }\n    }\n\n    function loop(timestamp) {\n      if (!lastTime) lastTime = timestamp;\n      const delta = timestamp - lastTime;\n      lastTime = timestamp;\n      update(delta);\n      draw();\n      requestAnimationFrame(loop);\n    }\n\n    document.addEventListener('keydown', (e) => {\n      const { key } = e;\n      if (key === 'ArrowUp' && dir.y !== 1) nextDir = { x: 0, y: -1 };\n      if (key === 'ArrowDown' && dir.y !== -1) nextDir = { x: 0, y: 1 };\n      if (key === 'ArrowLeft' && dir.x !== 1) nextDir = { x: -1, y: 0 };\n      if (key === 'ArrowRight' && dir.x !== -1) nextDir = { x: 1, y: 0 };\n    });\n\n    document.querySelectorAll('.btn').forEach(btn => {\n      btn.addEventListener('click', () => {\n        const k = btn.dataset.dir;\n        const evt = new KeyboardEvent('keydown', { key: k });\n        document.dispatchEvent(evt);\n      });\n    });\n\n    createGrid();\n    draw();\n    requestAnimationFrame(loop);\n  </script>\n</body>\n</html>\n"}]}